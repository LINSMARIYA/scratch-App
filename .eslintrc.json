{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true,
		"node": true
	},
	"extends": ["plugin:react/recommended", "prettier", "plugin:@typescript-eslint/recommended-requiring-type-checking"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "tsconfig.json" 
		
	},
	"plugins": ["react","jest"],
	"rules": {
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error",
		"no-unsafe-assignment": "off",
		"no-unsafe-return": "off",
		"no-unsafe-call": "off",
		"no-unsafe-member-access": "off",
		"no-unsafe-optional-chaining": "off"
	},
	"settings": {
        "react": {
            "version": "detect" // Automatically detect the React version
        }
    },
	  "ignorePatterns": ["**/*.svg"]
}
