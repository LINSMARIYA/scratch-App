{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": ["plugin:react/recommended", "prettier", "plugin:@typescript-eslint/recommended-requiring-type-checking"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "tsconfig.json" 
		
	},
	"plugins": ["react","jest"],
	"rules": {
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error"
	},
	"settings": {
        "react": {
            "version": "detect" // Automatically detect the React version
        }
    }
}
